<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/appbg2"
    android:layout_height="match_parent"
    tools:context=".homeActivity"
    tools:ignore="NamespaceTypo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/menu_logo"/>

        <RelativeLayout
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textDashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/nunitobold"
                android:textColor="@color/teal"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textFontWeight="950"
                android:text="Translation Home" />

            <TextView
                android:layout_below="@+id/textDashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/nunitobold"
                android:textColor="@color/teal"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textFontWeight="950"
                android:text="Explore Different Language Features" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:background="@drawable/homelogo"/>


        </RelativeLayout>


        <GridLayout
            android:columnCount="2"
            android:rowCount="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false">


            <androidx.cardview.widget.CardView
                android:id="@+id/button1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app1:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:background="@drawable/bgquestion"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/translate_logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                    <TextView
                        android:fontFamily="@font/nunitobold"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:text="Text Translation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app1:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:background="@drawable/bgquestion"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/mic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                    <TextView
                        android:fontFamily="@font/nunitobold"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:text="Voice Translation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app1:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:background="@drawable/bgquestion"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/image_logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                    <TextView
                        android:fontFamily="@font/nunitobold"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:text="Image Translation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/button4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app1:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:background="@drawable/bgquestion"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/book_logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                    <TextView
                        android:fontFamily="@font/nunitobold"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:text="Practice Zone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:textAlignment="center"
                android:fontFamily="@font/nunitobold"
                android:textSize="18sp"
                android:textFontWeight="950"
                android:text="Welcome to [Translation App Name]❗❗"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:textAlignment="center"
                android:fontFamily="@font/nunitobold"
                android:textSize="16sp"
                android:textFontWeight="950"
                android:text="Supporting over 50 languages. Handy for fast and accurate text, voice, and image translations. Practice your cultural knowledge and better understand different nations in the Practice Zone."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>


























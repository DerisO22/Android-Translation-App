<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".practiceActivity"
    tools:ignore="NamespaceTypo">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="30dp"
      android:layout_marginStart="40dp"
      android:layout_marginEnd="40dp"
      android:background="@drawable/bgquestion">

    <TextView
        android:fontFamily="@font/nunitobold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#7C51F3"
        android:textSize="26sp"
        android:text="The Practice Zone\nChoose a Category">
  </TextView>

  </LinearLayout>
  <GridLayout
      android:columnCount="2"
      android:rowCount="2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:alignmentMode="alignMargins"
      android:columnOrderPreserved="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app1:cardElevation="10dp"
        app1:cardCornerRadius="12dp"
        android:layout_margin="12dp">

      <LinearLayout
          android:orientation="vertical"
          android:padding="16dp"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/people"
            android:layout_width="90dp"
            android:layout_height="90dp"/>

        <TextView
            android:fontFamily="@font/nunitobold"
            android:paddingTop="4dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:text="Culture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app1:cardCornerRadius="12dp"
        app1:cardElevation="10dp"
        android:layout_margin="12dp">

      <LinearLayout
          android:orientation="vertical"
          android:padding="16dp"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/united_states"
            android:layout_width="90dp"
            android:layout_height="90dp"/>

        <TextView
            android:fontFamily="@font/nunitobold"
            android:layout_marginTop="8dp"
            android:paddingTop="4dp"
            android:textSize="16sp"
            android:text="Flags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app1:cardCornerRadius="12dp"
        app1:cardElevation="10dp"
        android:layout_margin="12dp">

      <LinearLayout
          android:orientation="vertical"
          android:padding="16dp"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/pin"
            android:layout_width="90dp"
            android:layout_height="90dp"/>

        <TextView
            android:fontFamily="@font/nunitobold"
            android:layout_marginTop="8dp"
            android:paddingTop="4dp"
            android:textSize="16sp"
            android:text="Geography"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
      </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app1:cardCornerRadius="10dp"
        app1:cardElevation="10dp"
        android:layout_margin="12dp">

      <LinearLayout
          android:orientation="vertical"
          android:padding="16dp"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/monster"
            android:layout_width="90dp"
            android:layout_height="90dp"/>

        <TextView
            android:fontFamily="@font/nunitobold"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:text="Language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
      </LinearLayout>
    </androidx.cardview.widget.CardView>
  </GridLayout>
  </LinearLayout>

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/bottomNavigationView"
      android:layout_alignParentBottom="true"
      android:background="@drawable/bottom_background"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:layout_marginBottom="10dp"
      android:elevation="2dp"
      app1:menu="@menu/bottom_menu"
      app1:itemIconSize="25dp"
      app1:itemIconTint="@drawable/item_selector"
      app1:itemRippleColor="@android:color/transparent"
      app1:labelVisibilityMode="unlabeled">
  </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>
